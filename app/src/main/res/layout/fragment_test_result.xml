<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="az.gulf.learnquran.fragment.TestResultFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/test_result_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/hello_blank_fragment"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/your_result"
            android:textSize="26sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/test_result_score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="0%"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/test_result_correct_answers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="dogru cavablar: 19"
            android:textSize="22sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/test_result_incorrect_answers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="yanlish cavablar: 0"
            android:textSize="22sp"
            android:textColor="@color/white"/>



        <TextView
            android:id="@+id/test_result_recommend_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Siz gozel neticeler elde etdiniz"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/test_result_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/back_to_lessons"/>







    </LinearLayout>

</FrameLayout>
